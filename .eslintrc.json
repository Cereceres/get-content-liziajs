{
    "env": {
        "es6": true,
        "node": true
    },
    "globals": {
        "sails": true
    },
    "no-console": ["error", "never"],
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ]
    },
    "no-mixed-spaces-and-tabs": [
      "error",
      "smart-tabs"
    ]
}
